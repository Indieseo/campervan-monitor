BROWSERLESS_API_KEY=2TCc50QWZiy4pBP861f1918aafa2f44e82c5b138727723ec2
BROWSERLESS_REGION=production-sfo

# ========================================
# EMAIL ALERTS (Optional)
# ========================================
ENABLE_EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_RECIPIENTS=manager@company.com,analyst@company.com

# Gmail Setup:
# 1. Enable 2-factor authentication in Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use App Password (not regular password) as SMTP_PASSWORD

# ========================================
# SLACK ALERTS (Optional)
# ========================================
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack Setup:
# 1. Go to: https://api.slack.com/messaging/webhooks
# 2. Create Incoming Webhook
# 3. Copy webhook URL above

# ========================================
# SMS ALERTS (Optional - Twilio)
# ========================================
ENABLE_SMS_ALERTS=false
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_FROM=+1234567890
SMS_RECIPIENTS=+1234567890,+0987654321

# Twilio Setup:
# 1. Sign up at: https://www.twilio.com
# 2. Get Account SID and Auth Token from dashboard
# 3. Purchase phone number

# ========================================
# DATABASE
# ========================================
DATABASE_PATH=./database/campervan_prices.db

# ========================================
# SCRAPING CONFIGURATION
# ========================================
USE_BROWSERLESS=true
HEADLESS_MODE=true
SCRAPING_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=30

# ========================================
# DATA QUALITY
# ========================================
MIN_PRICE=20
MAX_PRICE=500
MAX_DISCOUNT=90
STALENESS_DAYS=7

# ========================================
# SCHEDULING
# ========================================
DAILY_RUN_TIME=06:00
ENABLE_AUTO_EXPORT=true
EXPORT_FORMAT=excel
# Options: excel, pdf, csv, json, all

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR
LOG_RETENTION_DAYS=30

# ========================================
# DASHBOARD
# ========================================
DASHBOARD_PORT=8501
DASHBOARD_TITLE=Campervan Competitive Intelligence

# ========================================
# ADVANCED (Optional)
# ========================================
CACHE_TTL=86400
# Cache time-to-live in seconds (default: 24 hours)

DATA_RETENTION_DAYS=90
# How long to keep historical data

DEBUG_MODE=false
# Enable debug logging and screenshots
